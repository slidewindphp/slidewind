{
    "name": "slidewindphp/slidewind",
    "description": "This is my package slidewind",
    "keywords": [
        "slidewindphp",
        "slidewind"
    ],
    "homepage": "https://github.com/slidewindphp/slidewind",
    "license": "MIT",
    "authors": [
        {
            "name": "Enrico De Lazzari",
            "email": "enricodlz@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-dom": "*",
        "phpoffice/phppresentation": "^1.1",
        "stevebauman/hypertext": "^1.1"
    },
    "require-dev": {
        "jenssegers/blade": "^2.0",
        "laravel/pint": "^1.0",
        "pestphp/pest": "^3.0",
        "symfony/var-dumper": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "Slidewind\\Slidewind\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Slidewind\\Slidewind\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
